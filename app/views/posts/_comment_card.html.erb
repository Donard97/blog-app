<div class="container">
<div class="row m-4">
<div class="card bio">
<div class="card-body d-inline-flex">
  <p class="comment-author"><%= comment.author.name %></p>
  <p><%= comment.text %></p>
</div>
<div class="c-btn">
  <%if can? :destroy, comment%>
  <%= link_to user_post_path(comment.author_id, comment.post_id, comment.id), method: :delete do %>
    <button class="btn btn-primary comment-btn" >
    Delete
    </button>
  <%end%>
  <%end%>
</div>
</div>
</div>
</div>